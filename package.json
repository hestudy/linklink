{
  "name": "linklink",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "dev:extension": "turbo -F extension dev",
    "build:web": "turbo -F web build",
    "build:server": "turbo -F server build",
    "build:extension": "turbo -F extension build",
    "db:push": "turbo -F server db:push",
    "db:studio": "turbo -F server db:studio",
    "db:generate": "turbo -F server db:generate",
    "db:migrate": "turbo -F server db:migrate",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "type-check": "turbo check-types",
    "ci": "turbo build test lint type-check",
    "setup": "bun run setup:env && bun install && echo '✅ 开发环境设置完成！请运行 bun run dev 启动应用'",
    "setup:env": "cp .env.example .env && cp apps/web/.env.example apps/web/.env && cp apps/server/.env.example apps/server/.env && cp apps/extension/.env.example apps/extension/.env",
    "setup:db": "cd apps/server && bun run db:local && bun run db:push && cd ../..",
    "verify": "bun scripts/verify-builds.js",
    "verify:env": "bun scripts/verify-env.js",
    "verify:build": "turbo build",
    "verify:types": "turbo check-types",
    "verify:lint": "turbo lint",
    "verify:test": "turbo test"
  },
  "dependencies": {},
  "devDependencies": {
    "turbo": "^2.5.4",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.2.18"
}
